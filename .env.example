# Example environment variables for the Student Deployer app
# Copy this file to .env and fill in the real values (do NOT commit .env to git).

# MongoDB connection string
# Example (Atlas): mongodb+srv://<user>:<password>@cluster0.mongodb.net/<db_name>?retryWrites=true&w=majority
# Example (local): mongodb://<user>:<password>@localhost:27017/<db_name>
MONGODB_URL="mongodb+srv://username:password@cluster0.mongodb.net/DB_NAME"

# Database name used by the application (if not encoded in MONGODB_URL)
DB_NAME="student_db"

# Container image for the student pod (repository:tag)
# Example: ghcr.io/your-org/student-pod:latest or docker.io/youruser/student-pod:1.0.0
STUDENT_POD_IMAGE="ghcr.io/your-org/student-pod:latest"

# Admin password for the application (store securely; use secrets in production)
ADMIN_PASSWORD="change_this_to_a_strong_password"
